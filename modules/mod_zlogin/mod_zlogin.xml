<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
    <name>Zonales Login</name>
    <author>Cristian Pacheco</author>
    <creationDate>February 2010</creationDate>
    <copyright>(C) 2010 Cristian Pacheco. All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>cpacheco@lavabit.com</authorEmail>
    <version>1.0.0</version>
    <description>Zonales Login permite acceder a Zonales mediante
     autenticacion tradicional o utilizando un proveedor externo
     (OpenID, Facebook Connect, Twitter OAuth, etc.)
    </description>
    <files>
        <filename module="mod_zlogin"
               >mod_zlogin.php
        </filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/default_map.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <installfile>install.mod_zlogin.php</installfile>
    <languages folder="language">
        <language tag="es-ES">es-ES.mod_zlogin.ini</language>
    </languages>
</install>

