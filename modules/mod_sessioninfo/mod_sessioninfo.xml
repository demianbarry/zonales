<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
    <name>Zonales Session Info</name>
    <author>Cristian Pacheco</author>
    <creationDate>February 2010</creationDate>
    <copyright>(C) 2010 Cristian Pacheco. All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>cpacheco@lavabit.com</authorEmail>
    <version>1.0.0</version>
    <description>
        Informa al usuario actual que se encuentra autenticado en el sistema
        y le permite cerrar la sesi√≥n
    </description>
    <files>
        <filename module="mod_sessioninfo"
                  >mod_sessioninfo.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <params>
        <param name="zonales_session_close" type="text" label="zonales_session_close_button_text"
               default="ZONALES_SESSION_CLOSE" description="zonales_session_close_button_text_tip" />
        <param name="profilelink" type="text" default="index.php?option=com_user&amp;task=edit"
               label="URL a perfil del usuario "
               description=
               "Permite especificar la URL interna a los datos del usuario " />
    </params>
    <languages folder="language">
        <language tag="es-ES">es-ES.mod_sessioninfo.ini</language>
    </languages>
</install>