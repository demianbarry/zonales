<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.5.0">
    <name>Modulo Filtro</name>
    <author>Mediabit</author>
    <creationDate>Marzo 2010</creationDate>
    <copyright/>
    <license/>
    <authorEmail/>
    <authorUrl>http://www.mediabit.com.ar</authorUrl>
    <version>0.1</version>
    <description>Mod Fil Desc</description>
    <files>
        <filename module="mod_filtro">mod_filtro.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <languages folder="language">
        <language tag="es-ES">es-ES.mod_filtro.ini</language>
    </languages>
    <params>
        <param name="use_module_title" type="radio" default="0" label="use_module_title" description="use_module_title_tip">
            <option value="0">no</option>
            <option value="1">yes</option>
        </param>
        <param name="title" type="text" label="title" default="Filtro de Fuentes" description="title_tip" />
        <param name="description" type="textarea" rows="3" cols="40" label="filtro_description" default="El Filtro de Fuentes le permite personalizar las fuentes de los contenidos." description="fil_description_tip" />
        <param name="error_no_filtro" type="textarea" rows="3" cols="40" label="error_no_filtro" default="No se ha podido recuperar el filtro de fuentes." description="error_no_filtro_tip" />
    </params>
    <params group="advanced">
    </params>
</extension>
