<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5.0" method="upgrade">
	<name>ZCloud</name>
	<creationDate>2010</creationDate>
	<author>Cristian Pacheco</author>
	<authorEmail>cpacheco@lavabit.com</authorEmail>
	<copyright>Copyright 2010 Cristian Pacheco. All Rights Reserved.</copyright>
	<license>GNU/GPL</license>
	<version>1.0.1</version>
	<description>
		Modulo de nube de etiquetas que muestra las que al usuario le interesan.
                Las que tienen mayor interés por parte del mismo son resaltadas
	</description>

	<files>
		<filename module="mod_zcloud">mod_zcloud.php</filename>
		<filename>index.html</filename>
                <filename>helper.php</filename>
                <filename>tmpl/index.html</filename>
                <filename>tmpl/default.php</filename>
	</files>
	<params>
    <param name="zcloud_width" type="text" default="150" label="Ancho" description="Ancho de la nube de etiquetas, en pixeles" />
    <param name="zcloud_maxtags" type="text" default="16" label="Cantidad de tags" description="Maximo numero de etiquetas a mostrar" />
    <param name="zcloud_maxsize" type="text" default="2" label="Tamaño maximo de fuente" description="Maximo tamaño de fuente, en em" />
    <param name="zcloud_minpriority" type="text" default="100" label="Relevancia minima" description="Minima relevancia dada por el usuario para que la etiqueta sea mostrada"/>
	</params>
</install>

